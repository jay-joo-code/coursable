{
  "compilerOptions": {
    "target": "es2019",
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist/",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/client/*"
      ],
    },
    
    // configurations
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"],
